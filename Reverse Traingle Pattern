#include<iostream>
using namespace std;
int main()
{
    int n =4;                               //there is structure of four method
    for(int i=0;i<n; i++){
        for( int j=i+1; j>0; j--){        //this is for using reverse method in pattern 
            cout<<j;                      //we have to print that number which is inside j 
        }
        cout<<endl;
    }
